<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Editor" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="InputTextBox" Margin="10" Height="100" VerticalAlignment="Top" />
        <Button Content="Ввод текста" Margin="10,120,10,0" VerticalAlignment="Top" Click="InsertTextButton_Click"/>
        <Button Content="Удалить текст" Margin="10,160,10,0" VerticalAlignment="Top" Click="DeleteTextButton_Click"/>
        <Button Content="Отмена последней операции" Margin="10,200,10,0" VerticalAlignment="Top" Click="UndoButton_Click"/>
        <TextBlock x:Name="OutputTextBlock" Margin="10,240,10,0" TextWrapping="Wrap" />
    </Grid>
</Window>
